public boolean checkAdjacent(Tile t , Board b, boolean verbose) throws AdjacentTilesException{
        ArrayList<Tile> chad = new ArrayList<Tile>();
        chad=b.getAdjacent(t , b);

        for (Tile k : chad){
                if(k.getSymbol != 's'){
                        return true;
                        
                        
                } 
                else{
                return false;
                if(verbose == true){
                        throw new AdjacentTilesException();
                        
                        }
                        }
        }
}
